Algoritmo rectangulos
	// Ingreso de datos
	Escribir 'Ingrese la medida del lado 1 (m):'
	Leer lado1
	Escribir 'Ingrese la medida del lado 2 (m):'
	Leer lado2
	// proceso 
	area <- lado1*lado2
	perimetro <- (2 * lado1) + (lado2 * 2)
	// Mostrar los resultados
	Escribir 'El área es: ', area, ' m2'
	Escribir 'El perímetro es: ', perimetro, ' m'
FinAlgoritmo
